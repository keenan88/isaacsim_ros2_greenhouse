FROM moveit/moveit2:jazzy-release

RUN apt-get update
RUN apt install vim -y

# Packages for Kinova & Moveit, documentation: https://github.com/Kinovarobotics/ros2_kortex
#RUN apt install ros-humble-kortex-bringup -y
